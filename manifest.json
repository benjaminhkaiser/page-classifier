{
  "description": "Retrieve page url, text, and content using WebScience",
  "author": "Ben Kaiser",
  "manifest_version": 2,
  "name": "websci-scraper",
  "version": "0.0.1",

  "applications": {
    "gecko": {
      "id": "pageContents@princeton.edu"
    }
  },

  "browser_specific_settings": {
    "gecko": {
      "id": "pageContents@princeton.edu"
    }
  },

  "permissions": [
    "idle",
    "webNavigation",
    "webRequest",
    "unlimitedStorage",
    "nativeMessaging",
    "<all_urls>"
  ],

  "background": {
    "scripts": ["dist/background.js"]
  }
}
