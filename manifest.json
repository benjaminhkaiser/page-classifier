{
  "description": "Retrieve page url, text, and content using WebScience",
  "author": "Ben Kaiser",
  "manifest_version": 2,
  "name": "websci-scraper",
  "version": "0.0.1",

  "browser_specific_settings": {
    "gecko": {
      "id": "bkaiser@princeton.edu"
    }
  },

  "permissions": [
    "idle",
    "webNavigation",
    "*://*.mozilla.org/*"
  ],

  "background": {
    "scripts": ["dist/background.js"]
  },

  "incognito": "not_allowed"
}
